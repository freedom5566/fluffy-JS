<%- include("../layout")%>
    <h1>
        <%= title %>:<%= author.name %>

    </h1>
    <p><%=author.lifespan%></p>
    <% if(author_books.length){ %>
        <p><strong>Delete the following books before attempting to delete this author.</strong></p>
        <div class="margin-left:20px;margin-top:20px">
            <h4>Books</h4>
            <dl>
                <% for(book of author_books){ %>
                    <dt>
                        <a href="<%= book.url %>"><%= book.title %></a>
                    </dt>
                    <dd><%= book.summary %></dd>
                <% } %>
            </dl>
        </div>    
    <% }else{ %>
        <p>Do you really want to delete this Author?</p>
        <!-- 作者沒有書才能刪除 -->
        <form method="POST" action="">
            <div class="form-group">
                <input class="authorid form-control" type="hidden" name="authorid" required="true"  value="<%=author._id%>">
            </div>
            <button class="btn btn-primary" type="submit">刪除</button>
        </form>
    <% } %>

</div>
</div>
</div>
</body>
</html>