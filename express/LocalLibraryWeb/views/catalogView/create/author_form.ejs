<%- include("../layout")%>
    <h1>
        <%= title %>
    </h1>

    <form method="POST" action="">
        <div class="form-group">
            <label for="first_name">First Name:</label>
            <input class="first_name form-control" type="text" name="first_name" id="" placeholder="First name (Christian) last" value="<%= undefined===locals.author ? '' : author.first_name %>"
                required='true'>
            <label for="family_name">Family Name:</label>
            <input class="family_name form-control" type="text" name="family_name" id="" placeholder="Family name (surname)" value="<%= undefined===locals.author ? '' : author.family_name %>"
            required='true'>
        </div>
        <div class="form-group">
            <label for="date_of_birth">Date of birth:</label>
            <!-- 增加placeholder='dd/mm/yyyy'可以在沒有支援type="date"有明確的日期資料 -->
            <input class="date_of_birth form-control" type="date" name="date_of_birth" placeholder='dd/mm/yyyy' value="<%= undefined===locals.author ? '' : author.date_of_birth_yyyy_mm_dd %>">
            <label for="date_of_death">Date_of_death:</label>
            <input class="date_of_death form-control" type="date" name="date_of_death" placeholder='dd/mm/yyyy' value="<%= undefined===locals.author ? '' : author.date_of_death_yyyy_mm_dd %>">
        </div>
        <button class="btn btn-primary" type="submit">submit</button>
        
    </form>
    <% if(locals.errors){ %>
        <ul>
            <% for(let error of errors){ %>
                <li>
                    <%=   error.msg  %>
                </li>
                <% } %>
        </ul>
        <% } %>
            </div>
            </div>
            </div>
            </body>

            </html>