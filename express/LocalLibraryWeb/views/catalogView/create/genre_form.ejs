<%- include("../layout")%>
    <h1>
        <%= title %>
    </h1>
    <form method="POST" action="">
        <div class="form-group">
            <label for="name">Genre:</label>
            <input class="form-control" type="text" name="name" id="" placeholder="Fantasy, Poetry etc." value="<%= undefined===locals.genre ? '' : genre.name %>" required='true'>
            <button class="btn btn-primary" type="submit">submit</button> 
        </div>
    </form>
    <% if(locals.errors){ %>
        <ul>
            <% for(let error of errors){ %>
                <li><%=   error.msg  %></li>
            <% } %>
        </ul>
        <% } %>
</div>
</div>
</div>
</body>
</html>
        