<%- include("../layout")%>
    <h1>
        <%= title %>
    </h1>

    <form method="POST" action="">
        <div class="form-group">
            <label for="book" >Book:</label>
            <select class="book form-control" type="select" placeholder="Select book" name="book" required="true">
                <% for(locals.book of locals.book_list){ %>
                    <% if(locals.bookinstance){ %>
                        <option value="<%= book._id %>" selected="<%= bookinstance.book.toString()==book._id.toString() ? 'selected' : false %>"><%= book.title %></option>
                    <% }else{ %>
                        <option value="<%= book._id %>" ><%= book.title %></option>
                    <%}%>
                <% } %>

            </select>
        
        </div>
        <div class="form-group">
            <label for="imprint">Imprint:</label>
            <input class="imprint form-control" type="text" placeholder="Publisher and date information" name="imprint" required="ture" value="<%= undefined===locals.bookinstance ? '' : bookinstance.imprint %>">
        </div>
        <div class="form-group">
            <label for="due_back">Date when book available:</label>
            <input class="due_back form-control" type="date" name="due_back" value="<%= undefined===locals.bookinstance ? '' : bookinstance.due_back %>">
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select class="status form-control" type="text" placeholder="Select status" name="status" required="ture">
                <option value="Maintenance">Maintenance</option>
                <option value="Available">Available</option>
                <option value="Loaned">Loaned</option>
                <option value="Reserved">Reserved</option>
                
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
        
        <% if(locals.errors){ %>
            <ul>
                <% for(let error of errors){ %>
                    <li>
                        <%=   error.msg  %>
                    </li>
                    <% } %>
            </ul>
            <% } %>

    </form>
            </div>
            </div>
            </div>
            </body>

            </html>