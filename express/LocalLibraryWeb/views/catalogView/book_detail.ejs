<%- include("layout")%>
    <h1>
        <%= title %>:<%= book.title %> 
    </h1>
    <p><strong>Author:</strong><a href="<%= book.author.url %>"><%= book.author.name %></a></p>
    <p><strong>Summary:</strong><%= book.summary %></p>
    <p><strong>ISBN:</strong><%= book.isbn %> </p>
    <p><strong>Genre:</strong></p>&nbsp;
    <% for(let [index,val] of book.genre.entries()){ %>
        <a href="<%= val.url %>"> <%= val.name %></a>
        <% if(index <= book.genre.length - 1) {%>
            ,
        <% } %>
    <% } %>
    <div style="margin-left:20px;margin-top:20px">
        <h4>Copies</h4>
        <% for(let val of book_instances){ %>
        <hr>
            <% if(val.status=="Available"){ %>
              <p class="text-success"><%= val.status %></p>
            <% }else if(val.status=="Maintenance"){ %>
                <p class="text-danger"><%= val.status %></p>

            <% }else { %>
                <p class="text-warning"><%= val.status %></p>
            <% } %>  
            <p><strong>Imprint:</strong><%= val.imprint %></p>
            <% if(val.status=="Available"){ %>
                <p><strong> Due back:</strong><%= val.due_back %></p>
            <% } %>
            <p>strong Id:</p>&nbsp;
            <a href="<%= val.url %>"><%= val.id %></a>
        <% } %>
    </div>
    
</div>
</div>
</div>
</body>
</html>
        